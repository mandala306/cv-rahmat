      animation: floatLetters 3s ease-in-out infinite;
    }

    @keyframes floatLetters {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-6px); }
      100% { transform: translateY(0px); }
    }

    p.center {
      text-align: center;
      font-size: 0.95em;
      color: #555;
      margin-bottom: 10px;
    }

    .section {
